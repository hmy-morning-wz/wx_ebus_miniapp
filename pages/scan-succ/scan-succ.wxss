/* pages/scan-succ/scan-succ.wxss */
.container-scan-succ {
  min-height: 100vh;
  background: #F7F7FA;
}

.success-ban {
  padding: 100rpx 0 64rpx;
  background: #ffffff;
  font-size: 28rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: center;
  color: #000000;
  line-height: 40rpx;
}

.success-ban image {
  display: block;
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;
  margin-bottom: 24rpx;
}

.two-btn {
  display: flex;
  justify-content: center;
  padding-bottom: 80rpx;
  background: #ffffff;
}

.each-btn {
  width: 200rpx;
  height: 72rpx;
  border: 2rpx solid #0080ff;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: center;
  line-height: 40rpx;
}

.btn-left {
  margin-right: 40rpx;
  color: #0080ff;
}

.btn-right {
  background: #0080ff;
  color: #ffffff;
}